{
    "name": "surfoo/geocaching-api-demo",
    "description": "Geocaching PHP SDK Demo",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Surfoo",
            "email": "surfooo@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "twig/twig": "^3.0",
        "surfoo/geocaching-php-sdk": "dev-master",
        "twbs/bootstrap": "^4.4",
        "components/jquery": "^3.5",
        "symfony/error-handler": "^5.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.0"
    },
    "scripts": {
        "assets": [
            "cp -r vendor/twbs/bootstrap/dist/* web/assets/bootstrap/",
            "cp -r vendor/components/jquery/* web/assets/jquery/"
        ],
        "post-install-cmd": [
            "cp -n app/config.dist.php app/config.php",
            "@assets"
        ],
        "post-update-cmd": [
            "@assets"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "php-cs-fixer": "php-cs-fixer fix"
    }
}