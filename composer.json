{
    "name": "surfoo/geocaching-api-demo",
    "description": "Geocaching PHP SDK Demo",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Surfoo",
            "email": "surfooo@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "twig/twig": "^3.0",
        "surfoo/geocaching-php-sdk": "^3.17",
        "twbs/bootstrap": "^5.0",
        "symfony/error-handler": "^5.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "assets": [
            "cp -r vendor/twbs/bootstrap/dist/* public/assets/bootstrap/"
        ],
        "post-install-cmd": [
            "cp -n app/config.dist.php app/config.php",
            "@assets"
        ],
        "post-update-cmd": [
            "@assets"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "php-cs-fixer": "php-cs-fixer fix"
    }
}
